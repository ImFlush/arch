#!/bin/sh

trap 'update_trap' 5

delim="⏐"

# update the bar
setroot()
{
	xsetroot -name "$(status)"
	wait
}

update_all()
{
	wireguard_update
	network_update
	diskspace_update
	volume_update
	battery_update
	date_update

	setroot
}
update_trap()
{
	volume_update

	setroot
}

status()
{
	echo -n "$wireguard $delim "
	echo -n "$network $delim "
	echo -n " $diskspace $delim "
	echo -n "$volume $delim "
	echo -n "$battery $delim "
	echo -n " $date "
}

# update scripts
wireguard_update()
{
	wireguard="$(sh ~/.scripts/wireguard)"
}
network_update()
{
	network="$(sh ~/.scripts/network)"
}
diskspace_update()
{
	diskspace="$(df -h / | grep -E '/dev/sda2' | awk '{print $4}')"
}
volume_update()
{
	volume="$(sh ~/.scripts/volume | head -1)"
}
battery_update()
{
	battery="$(sh ~/.scripts/battery)"
}
date_update()
{
	date="$(date '+%a %d. %b  %H:%M')"
}

while true; do
	update_all
	sleep 15 &
	wait $!
done
