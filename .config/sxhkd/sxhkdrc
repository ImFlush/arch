# Programs
super + Return 
		$TERMINAL
super + c
		$BROWSER
super + shift + x
		slock
super + shift + t
		todo

super + F2
		sh ~/.scripts/signal
super + F3
		sh ~/.scripts/telegram
super + F4
		sh ~/.scripts/discord
super + F5
		st htop


# Shutdown
super + F12
		promt "Poweroff?" "poweroff" &
# Reboot
super + F11
		promt "Reboot?" "reboot" &
# Suspend
super + F10
		promt "Suspend?" "sh .scripts/suspend" &
# Exit i3
super + F9
		promt "Exit WM?" "killwm" &


## Mount / Umount
super + F7
		dmenumount&
super + F8
		dmenuumount&


# Sound
{XF86AudioRaiseVolume, XF86AudioLowerVolume}
		pactl set-sink-volume 0 {+5%, -5%}; pkill -SIGTRAP dwmbar; pkill -SIGRTMIN+10 i3blocks; dunstify -r 245 volume "$($HOME/.scripts/volume)"
		
XF86AudioMute
		pactl set-sink-mute 0 toggle; pkill -SIGTRAP dwmbar; pkill -SIGRTMIN+10 i3blocks; dunstify -r 245 volume "$($HOME/.scripts/volume)"
		
{XF86AudioPlay,XF86AudioNext,XF86AudioPrev}
		playerctl {play-pause, next, previous}


# Screen 
super + shift + s
		~/.scripts/screens/Screen-Profiles
super + control + s
		~/.scripts/screens/SelectMonitor
super + shift + w
		sh ~/.scripts/wallpaper

# Brightness
{XF86MonBrightnessUp, XF86MonBrightnessDown}
		xbacklight {-inc 20, -dec 20}; pkill -SIGRTMIN+20 i3blocks; dunstify -r 255 Brightness " Óçç  $(xbacklight -get) % "
