# Programme
super + Return 
		$TERMINAL

super + c
		$BROWSER

super + shift + x
		slock

super + F5
		st htop


# Shutdown
super + F12
		promt "Poweroff?" "poweroff" &
# Reboot
super + F11
		promt "Reboot?" "reboot" &
# Exit i3
super + F9
		promt "Exit i3?" "i3-msg exit" &


## Mount / Umount
super + F7
		dmenumount&
super + F8
		dmenuumount&


# Sound
{XF86AudioRaiseVolume, XF86AudioLowerVolume}
		pactl set-sink-volume 0 {+5%, -5%}
		
XF86AudioMute
		pactl set-sink-mute 0 toggle
		
{XF86AudioPlay,XF86AudioPause,XF86AudioNext,XF86AudioPrev}
		playerctl {play, pause, next, previous}


# Screen 
super + shift + s
		~/.scripts/screens/Screen-Profiles

super + control + s
		~/.scripts/screens/SelectMonitor


# Brightness
{XF86MonBrightnessUp, XF86MonBrightnessDown}
		light {-A 20,-U 20} && light | grep -E -o '^[[:digit:]]+[^\.]' > /home/tom/.config/brightness
