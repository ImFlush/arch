# Programme
super + Return 
		$TERMINAL

super + c
		$BROWSER

super + shift + x
		slock

super + F5
		st htop

super + shift + t
		telegram-desktop

super + ctrl + t
		todo


# Shutdown
super + F12
		promt "Poweroff?" "poweroff" &
# Reboot
super + F11
		promt "Reboot?" "reboot" &
# Exit i3
super + F9
		promt "Exit WM?" "killwm" &


## Mount / Umount
super + F7
		dmenumount&
super + F8
		dmenuumount&


# Sound
{XF86AudioRaiseVolume, XF86AudioLowerVolume}
		pactl set-sink-volume 0 {+5%, -5%}; pkill -SIGTRAP dwmbar; pkill -SIGRTMIN+10 i3blocks; dunstify -r 245 volume "$(~/.scripts/volume)"
		
XF86AudioMute
		pactl set-sink-mute 0 toggle; pkill -SIGTRAP dwmbar; pkill -SIGRTMIN+10 i3blocks; dunstify -r 245 volume "$(~/.scripts/volume)"
		
{XF86AudioPlay,XF86AudioNext,XF86AudioPrev}
		playerctl {play-pause, next, previous}


# Screen 
super + shift + s
		~/.scripts/screens/Screen-Profiles

super + control + s
		~/.scripts/screens/SelectMonitor


# Brightness
{XF86MonBrightnessUp, XF86MonBrightnessDown}
		xbacklight {-inc 20, -dec 20}; pkill -SIGRTMIN+20 i3blocks;  pkill -SIGTRAP dwmbar; dunstify -r 255 brightness " Óçç $(xbacklight -get) % "
