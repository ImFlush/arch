#!/bin/sh

# Keyboard 
setxkbmap -layout de
setxkbmap -option caps:escape
numlockx on

# Settings
xwallpaper --zoom ~/bilder/wallpaper
pactl set-sink-volume 0 50%
xbacklight -set 100
xrdb /home/tom/.config/X11/xresources

# Programs
sxhkd &
xbanish -s -t 4000 -b &
dunst &

# Display
xrandr --output eDP-1 --mode 1920x1080
xrandr --output HDMI-1 --set audio force-dvi

# Compositor
xcompmgr &


# WM
if [ "$(tty)" = "/dev/tty1" ]
	then
		exec ~/.scripts/launch-dwm
elif [ "$(tty)" = "/dev/tty2" ]
	then
		exec i3
fi
