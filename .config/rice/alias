# Home
alias h='cd ~'

# ls
alias ls='lsd'
alias lsa="lsd -la"
alias lsl="lsd -l"

# vim
alias v="nvim"
alias vim="nvim"

# sudo
alias sudo="sudo "
alias s="sudo "

# arch repos
alias co="git --git-dir=/home/tom/repos/arch/ --work-tree=/home/tom"

# nmcli
alias wlan="nmcli device wifi"
alias wlanc="nmcli connection"

# wireguard
alias wgup="sudo wg-quick up /etc/wireguard/tom.dedyn.io.conf"
alias wgdown="sudo wg-quick down /etc/wireguard/tom.dedyn.io.conf"

# Git
alias g="git"
alias gs="git status"
alias ga="git add"
alias gaa="git add --all"
alias gc="git commit"
alias gd="git diff"
alias gl="git log"
alias glo="git log --oneline"
alias gm="git merge"
alias gch="git checkout"
alias gr="git reset"
alias gp="git pull && git push"
alias gpu="git pull"
alias gph="git push"

# dwm
alias cdwm="cd ~/repos/dwm"
alias cst="cd ~/repos/st"
alias dwm-clean='cd ~/repos/dwm && make clean && rm -f config.h && rm -f tags && git reset --hard origin/master'
